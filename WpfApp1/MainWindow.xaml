<Window x:Class="SimpleVideoPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Video Player" Height="450" Width="800">
    <StackPanel>
        <!-- MediaElement to display the video -->
        <MediaElement x:Name="videoPlayer" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      Height="300" 
                      LoadedBehavior="Manual" 
                      UnloadedBehavior="Manual"
                      MediaEnded="VideoPlayer_MediaEnded" />
        <!-- Event handler when video ends -->

        <!-- Play Button -->
        <Button Content="Play Video" 
                HorizontalAlignment="Center" 
                Click="PlayButton_Click" 
                Width="100" Height="40" Margin="10"/>
    </StackPanel>
</Window>
